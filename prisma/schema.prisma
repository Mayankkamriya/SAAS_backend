generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String?

  // Relationship
  vendorId Int? // Optional â€” user may or may not be assigned
  vendor   Vendor? @relation("VendorUsers", fields: [vendorId], references: [id])

  appointments Appointment[] // User's booked appointments

  // ... other user fields
}

model Vendor {
  id          Int      @id @default(autoincrement())
  vendorCode  String   @unique @db.Char(6)
  shopName    String
  address     String
  phoneNumber String
  description String?
  createdAt   DateTime @default(now())

  price            Float?
  appointmentSlots DateTime[] // Available slots
  services         Service[] // Linked services

  users        User[]        @relation("VendorUsers")
  appointments Appointment[] // Vendor's booked appointments
}

model Service {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
  vendor   Vendor @relation(fields: [vendorId], references: [id])
  vendorId Int
}

model Appointment {
  id     Int      @id @default(autoincrement())
  slot   DateTime
  status String   @default("booked")

  user   User @relation(fields: [userId], references: [id])
  userId Int

  vendor   Vendor @relation(fields: [vendorId], references: [id])
  vendorId Int

  createdAt DateTime @default(now())
}
